import os

def get_dir_size(path, i):

    # format path 
    path = path.replace("\\","/")

    # define cut_path function
    def cut_path(path, i):
        score = 0
        for n in range(1,len(path)+1):
            if path[-n] == '/':
                score += 1
                if score == i:
                    return path[:-n]
            else:
                pass

    # if there is cut to be made, make cut
    if i > 0:  
        path = cut_path(path, i)

    # compute size of resultant directory
    total = 0
    with os.scandir(path) as it:
        for entry in it:
            if entry.is_file():
                total += entry.stat().st_size
            elif entry.is_dir():
                total += get_dir_size(entry.path)
    return total
