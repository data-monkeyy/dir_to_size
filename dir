def path_back_size(path,i):
    
    import os

    #def format_path(path):
    #    path = path.replace(os.sep, '/')
    #    return path

    #path = format_path(path)

    def cut_path(path, i):
        score = 0
        for n in range(1,len(path)+1):
            if path[-n] == '\\':
                score += 1
                if score == i:
                    return path[:-n]
            else:
                pass

    if i > 0:
        path = cut_path(path,i)        
    
    def path_size(path):
        total = 0
        for entry in os.scandir(path):
            if entry.is_file():
                total += entry.stat().st_size
            elif entry.is_dir():
                total += path_size(entry.path)
        return total

    return path_size(path)
